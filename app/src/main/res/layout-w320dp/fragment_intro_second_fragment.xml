<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="viewModel"
            type="com.example.projectsetup.ui.welcomesplash.fragment.IntroSecondViewModel" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:context=".IntroFirstFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView38"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/paceblue" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/splash2" />

            <TextView
                android:id="@+id/easyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textSize="28sp"
                android:textColor="#194CB4"
                android:text="@{@string/easy_to_use(viewModel.easytouse)}" />

            <TextView
                android:id="@+id/easySubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textColor="#201A16"
                android:text="@{@string/easy_to_rent_get_support_after_renting(viewModel.easytorent)}" />

            <TextView
                android:id="@+id/easySubtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#201A16"
                android:text="@{@string/and_find_similar_property(viewModel.findsimilar)}" />







        </LinearLayout>
    </RelativeLayout>

</layout>

