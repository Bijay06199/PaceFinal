<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="viewModel"
            type="com.example.projectsetup.ui.navigation.fragment.home.HomeFragmentViewModel" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="20dp">

                    <SearchView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:queryHint="Search here" />
                </androidx.cardview.widget.CardView>




                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/notification" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="340dp"
                android:background="#28D8D4D4"
                android:layout_height="1.2dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">






                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <androidx.core.widget.NestedScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fillViewport="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:paddingLeft="10dp"
                                    android:orientation="vertical" >







                                    <androidx.viewpager.widget.ViewPager
                                        android:id="@+id/myViewPager1"
                                        android:layout_width="match_parent"
                                        android:layout_height="150dp"
                                        />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:id="@+id/layout1"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="15dp"
                                        android:orientation="vertical">



                                        <LinearLayout
                                            android:id="@+id/viewPagerIndicatorIconsLayout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:layout_gravity="center"
                                            android:orientation="horizontal">
                                            <ImageView
                                                android:id="@+id/firstDotImageView1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:contentDescription="@null"
                                                android:src="@drawable/selecteditemhome_dot" />
                                            <ImageView
                                                android:id="@+id/secondDotImageView1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="7dp"
                                                android:contentDescription="@null"
                                                android:src="@drawable/nonselecteditemhome_dot" />
                                            <ImageView
                                                android:id="@+id/thirdDotImageView1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="7dp"
                                                android:contentDescription="@null"
                                                android:src="@drawable/nonselecteditemhome_dot" />
                                        </LinearLayout>

                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginBottom="15dp"
                                        android:background="@drawable/home_background"
                                        android:backgroundTint="@color/cardview_light_background"
                                        android:elevation="10dp"
                                        android:paddingBottom="10dp"
                                        android:orientation="vertical">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:orientation="vertical">

                                                <ImageView
                                                    android:id="@+id/imageView5611"
                                                    android:layout_width="70dp"
                                                    android:layout_height="70dp"
                                                    android:src="@drawable/home5" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="-10dp"
                                                    android:gravity="center"
                                                    android:text="University"
                                                    android:textColor="#201A16"
                                                    android:textSize="12sp" />

                                            </LinearLayout>


                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:orientation="vertical">

                                                <ImageView
                                                    android:id="@+id/imageView5612"
                                                    android:layout_width="70dp"
                                                    android:layout_height="70dp"
                                                    android:src="@drawable/home5" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="-10dp"
                                                    android:gravity="center"
                                                    android:text="Sports"
                                                    android:textColor="#201A16"
                                                    android:textSize="12sp" />

                                            </LinearLayout>


                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:orientation="vertical">

                                                <ImageView
                                                    android:id="@+id/imageView5634"
                                                    android:layout_width="70dp"
                                                    android:layout_height="70dp"
                                                    android:src="@drawable/home7" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="-10dp"
                                                    android:gravity="center"
                                                    android:text="Jobs"
                                                    android:textColor="#201A16"
                                                    android:textSize="12sp" />

                                            </LinearLayout>


                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:orientation="vertical">

                                                <ImageView
                                                    android:id="@+id/imageView5633"
                                                    android:layout_width="70dp"
                                                    android:layout_height="70dp"
                                                    android:src="@drawable/home8" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="-10dp"
                                                    android:gravity="center"
                                                    android:text="Hospitals"
                                                    android:textColor="#201A16"
                                                    android:textSize="12sp" />

                                            </LinearLayout>


                                        </LinearLayout>




                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:orientation="vertical">

                                                <ImageView
                                                    android:id="@+id/imageView56"
                                                    android:layout_width="70dp"
                                                    android:layout_height="70dp"
                                                    android:src="@drawable/home1" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="-10dp"
                                                    android:gravity="center"
                                                    android:text="For rent"
                                                    android:textColor="#201A16"
                                                    android:textSize="12sp" />

                                            </LinearLayout>


                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:orientation="vertical">

                                                <ImageView
                                                    android:id="@+id/imageView561"
                                                    android:layout_width="70dp"
                                                    android:layout_height="70dp"
                                                    android:src="@drawable/home2" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="-10dp"
                                                    android:gravity="center"
                                                    android:text="For sale"
                                                    android:textColor="#201A16"
                                                    android:textSize="12sp" />

                                            </LinearLayout>


                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:orientation="vertical">

                                                <ImageView
                                                    android:id="@+id/imageView562"
                                                    android:layout_width="70dp"
                                                    android:layout_height="70dp"
                                                    android:src="@drawable/home3" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="-10dp"
                                                    android:gravity="center"
                                                    android:text="Shopping"
                                                    android:textColor="#201A16"
                                                    android:textSize="12sp" />

                                            </LinearLayout>


                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:orientation="vertical">

                                                <ImageView
                                                    android:id="@+id/imageView563"
                                                    android:layout_width="70dp"
                                                    android:layout_height="70dp"
                                                    android:src="@drawable/home4" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="-10dp"
                                                    android:gravity="center"
                                                    android:text="Restaurants"
                                                    android:textColor="#201A16"
                                                    android:textSize="12sp" />

                                            </LinearLayout>


                                        </LinearLayout>


                                    </LinearLayout>





                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:background="@drawable/home_layout"
                                        android:paddingLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:orientation="horizontal">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="5dp"
                                                android:gravity="center"

                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/textView7"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="1dp"
                                                    android:text="Complete your profile"
                                                    android:textColor="#201A16"
                                                    android:textSize="14sp" />

                                                <TextView
                                                    android:id="@+id/textView8"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="1dp"
                                                    android:text="Complete and verify profile to start your"
                                                    android:textColor="#201A16"
                                                    android:textSize="12sp" />

                                                <TextView
                                                    android:id="@+id/textView9"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="1dp"
                                                    android:text="journey toward better app experience"
                                                    android:textColor="#201A16"
                                                    android:textSize="12sp" />

                                                <TextView
                                                    android:id="@+id/textView10"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="1dp"
                                                    android:layout_marginTop="5dp"
                                                    android:gravity="center"
                                                    android:text="Edit your profile"
                                                    android:textColor="#194CB4"
                                                    android:textSize="14sp" />
                                            </LinearLayout>
                                            <ImageView
                                                android:id="@+id/imageView9"
                                                android:layout_width="@dimen/image_width"
                                                android:layout_height="@dimen/image_height"
                                               android:layout_alignParentEnd="true"
                                                android:src="@drawable/mobile1" />
                                        </RelativeLayout>
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/textView12"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp"
                                        android:text="Popular cities"
                                        android:textColor="#201A16"
                                        android:textSize="15sp" />

                                </LinearLayout>
                            </androidx.core.widget.NestedScrollView>





                        </LinearLayout>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <androidx.core.widget.NestedScrollView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fillViewport="true">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <androidx.recyclerview.widget.RecyclerView
                                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                                android:layout_width="match_parent"
                                                android:orientation="horizontal"
                                                android:id="@+id/recyclerView"
                                                tools:listitem="@layout/popular_cities"
                                                android:layout_height="wrap_content" />
                                        </LinearLayout>
                                    </androidx.core.widget.NestedScrollView>
                                </LinearLayout>


                                <TextView
                                    android:id="@+id/textView121"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Recommended property for you"
                                    android:textColor="#201A16"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="15sp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:orientation="vertical">



                                    <androidx.recyclerview.widget.RecyclerView
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:paddingBottom="70dp"
                                        android:id="@+id/recyclerview_reccommended_parent"
                                        tools:listitem="@layout/recommended_property_parent"
                                        android:layout_height="wrap_content" />




                                </LinearLayout>
                            </LinearLayout>


                        </ScrollView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</layout>









