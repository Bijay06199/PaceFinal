<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.example.projectsetup.ui.navigation.fragment.account.registerproperty.register.models.PropertyItemsModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_room"
                    imageSrc="@{model.component1()}"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/image_height"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:id="@+id/below"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_height">

                    <Button
                        android:id="@+id/btn_sale_rent"
                        android:layout_width="48dp"
                        android:layout_height="25dp"
                        android:background="@drawable/rent_layout"
                        android:text="SALE"
                        android:textColor="#FFFF" />


                    <ImageView
                        android:id="@+id/imgheart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/heart" />

                    <ImageView
                        android:id="@+id/imgsavedheart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/savedheart" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/below"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_myproperty1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{model.component2()}"
                        android:textColor="#201A16"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_myproperty2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{model.component3()}"
                        android:textColor="#201A16"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_myproperty3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@{model.component4()}"
                        android:textColor="#201A16"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/bed" />

                        <ImageView
                            android:id="@+id/imageView30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/bath" />

                        <ImageView
                            android:id="@+id/imageView31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"

                            app:srcCompat="@drawable/area" />
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>

