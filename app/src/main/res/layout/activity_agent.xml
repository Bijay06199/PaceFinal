<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.projectsetup.ui.navigation.fragment.account.registerproperty.agent.viewModel.FindAgentByAreaActivityViewModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{()->viewModel.onBack()}"
        app:srcCompat="@drawable/backarrow" />

    <TextView
        android:id="@+id/textView77"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find an agent"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:textSize="15sp" />

</LinearLayout>

    <SearchView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/search_layout1"
        android:queryHint="Enter agent name"
        android:elevation="5dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#201A16"
                android:textSize="15sp"
                android:text="Search area" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Browse agent by area" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:id="@+id/iv_arrow_right"
            android:gravity="center"
            android:layout_height="50dp">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{()->viewModel.onNextClicked()}"
            app:srcCompat="@drawable/arrowright" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</layout>

