<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="viewModel"
            type="com.example.projectsetup.ui.navigation.fragment.account.registerproperty.register.viewModel.RegisterPropertyFacilitiesViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:id="@+id/save"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:onClick="@{()-> viewModel.onBack()}"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/backarrow1" />
                <TextView
                    android:id="@+id/textView77"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Register a property"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="#201A16"
                    android:textSize="15sp" />

            </LinearLayout>


            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#194CB4"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:layout_gravity="center"
                android:text="Save progress" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_below="@id/save"
            android:paddingBottom="80dp"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:orientation="vertical">




            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#201A16"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginTop="10dp"
                android:text="Choose property facilities" />

            <TextView
                android:id="@+id/textView141"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#201A16"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:textStyle="bold"
                android:text="Property facilities" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#201A16"
                    android:fontFamily="@font/quicksand"
                    android:text="Parking lot" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#201A16"
                    android:fontFamily="@font/quicksand"
                    android:layout_weight="1"
                    android:text="On-site parking" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#201A16"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand"
                    android:text="Bike storage" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#201A16"
                    android:fontFamily="@font/quicksand"
                    android:text="Elevator" />


                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#201A16"
                    android:fontFamily="@font/quicksand"
                    android:text="Delivery box" />


                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:layout_weight="1"
                    android:textColor="#201A16"
                    android:text="City gas" />


                <TextView
                    android:id="@+id/textView142"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#201A16"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_marginTop="10dp"
                    android:text="Security" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand"
                    android:textColor="#201A16"
                    android:text="Auto lock" />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand"
                    android:textColor="#201A16"
                    android:text="Intercom" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand"
                    android:textColor="#201A16"
                    android:text="Security company subscription" />

                <TextView
                    android:id="@+id/textView143"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#201A16"
                    android:textSize="15sp"
                    android:fontFamily="@font/quicksand_bold"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="Add other facilities" />

                <EditText
                    android:id="@+id/textView80111"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:fontFamily="@font/quicksand"
                    android:gravity="left"
                    android:hint="Enter other conditions here"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="10dp"
                    android:background="#70C5BFBF"
                    android:orientation="horizontal"></LinearLayout>

            </LinearLayout>


        </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="#FFF"
            android:text="@string/next"
            android:onClick="@{()->viewModel.onBtnClicked()}"
            android:background="@drawable/register_propety_button"/>
    </RelativeLayout>
</layout>

