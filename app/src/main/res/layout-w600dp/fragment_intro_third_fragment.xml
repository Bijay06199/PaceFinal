<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="viewModel"
            type="com.example.projectsetup.ui.welcomesplash.fragment.IntroThirdViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:context=".IntroFirstFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView38"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/paceblue" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/splash3" />

            <TextView
                android:id="@+id/secureTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textSize="28sp"
                android:textColor="#194CB4"
                android:text="@{@string/secure_transparent_and_cost_effective(viewModel.securetransparent)}" />

            <TextView
                android:id="@+id/secureSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textColor="#201A16"
                android:text="@{@string/secure_and_transparent_information(viewModel.information)}" />

            <TextView
                android:id="@+id/secureSubtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#201A16"
                android:text="@{@string/about_the_real_estate_that_you_want_at(viewModel.effective)}" />



            <TextView
                android:id="@+id/secureSubtitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#201A16"
                android:text="@string/cost_effective_rate" />







        </LinearLayout>
    </RelativeLayout>

</layout>

